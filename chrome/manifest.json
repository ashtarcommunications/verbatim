{
  "name": "Verbatim",
  "version": "0.1",
  "description": "Verbatim shortcuts",
  "icons": {
	  "16": "icon.png",
	  "48": "48.png",
	  "128": "128.png"
   },
  "options_page": "options.html",
  "background": {
      "service_worker": "background.js"
   },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["mousetrap.min.js", "verbatim.js"],
      "css": ["verbatim.css"],
      "match_about_blank": true,
      "all_frames": true
    }
  ],
  "browser_action": 
	{
	  "default_icon": "icon.png",
	  "default_title": "Verbatim",
	  "default_popup": "popup.html"
	},
  "permissions":["clipboardRead", "clipboardWrite", "storage", "tabs"],
  "manifest_version": 3
}